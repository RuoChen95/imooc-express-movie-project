extends ../layout

block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h3 #{cat.name}
					.panel-body
						each item in cat.movies
							.col-md-2
								.thumbnail
									a(href="/movie/" + item._id)
										img(src=item.poster)
									h3 #{item.title}
									p
										a.btn.btn-primary(href="/movie/" + item._id, role=button) 查看详情